  <%- if @restart_tolerance -%>
  IF <%= @restarts %> RESTARTS WITHIN <%= @cycles %> CYCLES THEN <%= @action %>
  <%- end -%>
  GROUP <%= @group %>
<%- unless @depends.empty? -%>
  DEPENDS <%= @depends.join(', ') %>
<%- end -%>
<%- unless @alerts.empty? -%>
  <%- @alerts.each do |alert| -%>
  ALERT <%= alert %>
  <%- end -%>
<%- end %>
<%- unless @noalerts.empty? -%>
  <%- @noalerts.each do |noalert| -%>
  NOALERT <%= noalert %>
  <%- end -%>
<%- end -%>
<%- @tests_real.each do |test| -%>
  IF <%= test['condition'] %>
  <%- if test.key? 'tolerance' -%>
    FOR <%= test['tolerance'] %>
  <%- end -%>
  THEN <%= test['action'] %>
<%- end -%>
